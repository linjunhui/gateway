			component.attrtv .setText(attrname);
			
			String attrv = null;
			
			if((mAttrs.get(position).attrName).equals("开关")) {
				if(mAttrs.get(position).data == 0) 
					attrv = "关";
				else
					attrv = "开";
				
			System.out.println("开关:" + attrv);
			}
			
												
			
			component.arrtvbt.setText(attrv);
		
			
			return convertView;
		}
		
